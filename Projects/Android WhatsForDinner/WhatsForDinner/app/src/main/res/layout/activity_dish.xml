<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    tools:context=".DishActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/homeFABfromDish"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:src="@drawable/ic_action_home"
        android:tint="@color/colorPrimary"
        app:backgroundTint="@color/colorSelected"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_optimizationLevel="direct"
        app:rippleColor="@color/colorBigButton" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/familyFABfromDish"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:src="@drawable/ic_action_family"
        android:tint="@color/colorPrimary"
        app:backgroundTint="@color/colorSelected"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_optimizationLevel="direct"
        app:rippleColor="@color/colorBigButton" />

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:fillViewport="true"
        android:paddingTop="155dp"

        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/dishButtonsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="28dp"
            android:background="@color/colorBigButton"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBigButtonText"
                android:gravity="center"
                android:text="Ingredient 1"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBigButtonText"
                android:gravity="center"
                android:text="Ingredient 2"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBigButtonText"
                android:gravity="center"
                android:text="Ingredient 3"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBigButtonText"
                android:gravity="center"
                android:text="Ingredient 4"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBigButtonText"
                android:gravity="center"
                android:text="Ingredient 5"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="24dp">

        <TextView
            android:id="@+id/mealActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Meal Info"
            android:textColor="@color/colorBigButtonText"
            android:textSize="@dimen/memberTextTitle"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="16dp" />


        <TextView
            android:id="@+id/mealNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="dishName"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/mealTypeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="main/sideDish"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/mealTypeTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="Ingredients"
            android:textColor="@color/colorBigButtonText"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="18dp" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>